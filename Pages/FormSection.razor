
<div class="container mt-5">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Title</h5>
            @ChildContent
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public string Title { get; set; } = default!;

    [Parameter]
    public string HelpText { get; set; } = default!;

    [Parameter, EditorRequired]
    public RenderFragment ChildContent { get; set; } = default!;


}
