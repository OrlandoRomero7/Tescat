@using Tescat.Models;
@using Tescat.Services;
@using Tescat.Services.Users;

@inject IUserService UserService

<div class="container">
    <div class="row">
        @foreach (var user in users)
        {
            <div class="col-lg-4">
                <div class="card border-rounded" style="width: 250px; border-radius: 15px;">
                    <div class="card-body">
                        <center class="m-t-30">
                            <div class="profile-img">
                                <img src="https://bootdey.com/img/Content/avatar/avatar1.png" class="img-circle" width="150">
                            </div>
                            <h4 class="card-title m-t-10">@user.Name</h4>
                            <h6 class="card-subtitle">@user.Position</h6>
                        </center>
                    </div>
                    <div>
                        <hr>
                    </div>
                    <div class="card-body">
                        <small class="text-muted">Ext</small>
                        <h6>@user.Tel</h6>
                        <small class="text-muted p-t-30 db">Departamento</small>
                        <h6>@user.Dept</h6>

                    </div>
                </div>
            </div>
        }
        
    </div>
</div>

<style>
    .profile-img img {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 50%;
    }
</style>


@code {
    private List<User> users = new List<User>();
    public string? Message { get; set; }
    protected override async Task OnInitializedAsync()
    {
        users = await UserService.GetAllUsers();
    }
}
