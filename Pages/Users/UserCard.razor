@*@using Tescat.Services;
@using Tescat.Services.Users;*@

@inject IUserService UserService
@inject NavigationManager NavigationManager





<div class="col-lg-4">
    <div class="card border-rounded" style="width: 250px; border-radius: 15px;">
        <div class="card-body">
            <center class="m-t-30">

                <div class="profile-img">
                    <img src="@GetImagePath()" alt="user image" style="width: 150px; height: 150px; object-fit: cover; border-radius: 50%;">
                </div>

                <h4 class="card-title m-t-10">@User.Name</h4>
                <h6 class="card-subtitle">Posicion</h6>
            </center>
        </div>
        <div>
            <hr>
        </div>
        <div class="card-body">
            <small class="text-muted">Ext</small>
            <h6>@User.Tel</h6>
            <small class="text-muted p-t-30 db">Area</small>
            <h6>@User.Area</h6>

        </div>


        <button type="button" class="btn btn-info" @onclick="() => UserDetails(User.IdUser)">Ver</button>


    </div>

</div>






<style>
    .profile-img img {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 50%;
    }
</style>


@code {
    [Parameter, EditorRequired]
    public User User
    { get; set; } = default!;


    private string GetImagePath()
    {
        @if (User.IMAGE_NAME is not null)
        {
            return $"/Images/{User.IMAGE_NAME}";
        }
        else
        {
            return $"/Images/default.svg";
        }
    }

    protected void UserDetails(int id)
    {
        NavigationManager.NavigateTo("/UserDetails/" + id);
    }


}