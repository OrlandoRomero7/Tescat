@page "/"
@using Microsoft.AspNetCore.Components.Web
@namespace Tescat.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="Tescat.styles.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="favicon.png" />
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
    
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    @*Script para detectar navegacion*@
    <script>window.checkChangesBeforeUnload = function (enable) {
            if (enable) {
                window.addEventListener('beforeunload', warnOnPageExit);
            } else {
                window.removeEventListener('beforeunload', warnOnPageExit);
            }
        };

        function warnOnPageExit(e) {
            e.preventDefault();
            e.returnValue = 'Tienes cambios sin guardar. ¿Estás seguro de que quieres abandonar la página?';
        }</script>

    @*Script para poder sacar boton de 


    *@

    <script>function submitFormById(formId) {
            document.getElementById(formId).requestSubmit();
        }</script>
    @*Script para usar Sweet Alert*@
    <script src="_content/CurrieTechnologies.Razor.SweetAlert2/sweetAlert2.min.js"></script>

    @*Scripts para usar ChartJs de Blazor*@
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js"></script>
    <!-- This is the glue between Blazor and Chart.js -->
    <script src="_content/ChartJs.Blazor.Fork/ChartJsBlazorInterop.js"></script>

    @*Script para manejar Desplazamiento*@
    <script>function scrollToCard(cardId) {
            var element = document.getElementById(cardId);
            element.scrollIntoView({ behavior: 'smooth' });
        }</script>


    @*Script para Radzen*@
    <link rel="stylesheet" href="_content/Radzen.Blazor/css/material-base.css">
    <script src="_content/Radzen.Blazor/Radzen.Blazor.js"></script>
    @*Script para navegar en html*@
    <script>
        window.scrollIntoView = function (elementId) {
            var section = document.getElementById(elementId);
            section.scrollIntoView({ behavior: 'smooth' });
        };
    </script>

    <script>
        function initToggleButtonVisibility() {
            // Initial check for button visibility
            toggleButtonVisibility();

            // Register the scroll event listener
            window.addEventListener('scroll', toggleButtonVisibility);
        }

        function toggleButtonVisibility() {
            var header = document.querySelector('.header-container');
            var button = document.querySelector('.scroll-to-top-button');
            var headerBounds = header.getBoundingClientRect();

            // Check if the header is out of the viewport
            if (headerBounds.bottom < 0) {
                button.style.opacity = '1';
                button.style.visibility = 'visible';// Show button
            } else {
                button.style.opacity = '0'; // Hide button
            }
        }



    </script>




    @* Para desactivar el scroll vertical cuando MainModal este activo *@
    <script>

        function disableVerticalScroll() 
        {
        document.documentElement.style.overflowY = 'hidden';
        }

        function enableVerticalScroll() {
            document.documentElement.style.overflowY = 'initial';
        }

    </script>

</body>
</html>
