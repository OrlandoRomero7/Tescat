<AuthorizeView>
    <Authorized>
     @*   <a href="Identity/Account/Manage">Bienvenido, @context.User.Identity.Name</a>*@

     <div style="display:flex; align-items:center">

        <a href ="Identity/Account/Manage">
            <div style="overflow:hidden; border:2px solid rgba(36,93,130,0.1); width:44px; height:44px; border-radius:4px;  ">
             
                <p style="width:100%; height:100%; font-size:2.25rem; margin:0; align-items: center; justify-content: center; display: flex;">
                    @context.User.Identity.Name.Substring(0, 1).ToUpper()
               
                </p>
            </div>
        </a>

    

        </div>


        <div class="dropdown" >

            <button class="dropdown-toggle"
                    data-bs-toggle="dropdown"
                    data-bs-auto-close="outside"
                    aria-expanded="false"
                    style="border:none; background:none; font-size: 1.5rem; padding:0;">
                    
                <i class="bi bi-three-dots-vertical"></i>

            </button>

            <div class="dropdown-menu shadow" style="padding: 0.824rem 0.824rem;  border-radius: 0.5rem; border: none; ">

                <a href="Identity/Account/Manage" class="dropdown-item" style=" color: var(--brand-text); cursor:pointer; border-radius:4px;"><i class="bi bi-person-fill-gear me-2" style="font-size: 1.25rem;"></i> Cuenta</a>

                <form  method="post" action="Identity/Account/Logout" style=" border-radius:4px; width:100%">
                    <button type="submit" class=" dropdown-item nav-link btn btn-link"
                    style=" color: var(--brand-text)">
                        <i class="bi bi-power me-2" style="font-size: 1.25rem;"></i>Cerrar Sesion
                        </button>
                </form>


            </div>

        </div>

    </Authorized>
    <NotAuthorized>
        <a href="Identity/Account/Login">Log in</a>
    </NotAuthorized>
</AuthorizeView>

